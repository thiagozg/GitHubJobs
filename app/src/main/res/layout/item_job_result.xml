<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:paddingStart="24dp"
	android:paddingEnd="24dp"
	android:paddingTop="16dp"
	android:paddingBottom="16dp"
	>
	
	<ImageView
		android:layout_width="80dp"
		android:layout_height="80dp"
		tools:srcCompat="@tools:sample/avatars"
		android:id="@+id/ivCompanyLogo"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		android:importantForAccessibility="no"
		app:layout_constraintBottom_toBottomOf="parent"
		/>
	
	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/tvTitle"
		app:layout_constraintStart_toEndOf="@+id/ivCompanyLogo"
		app:layout_constraintTop_toTopOf="@+id/ivCompanyLogo"
		android:layout_marginStart="24dp"
		android:layout_marginTop="2dp"
		android:textStyle="bold"
		android:textSize="18sp"
		android:textColor="@color/primaryText"
		app:layout_constraintHorizontal_bias="0"
		android:maxLines="1"
		android:maxEms="12"
		android:ellipsize="end"
		app:layout_constraintEnd_toEndOf="parent"
		tools:text="Senior Android Developer huehuekkkk"
		/>
	
	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/tvCompanyName"
		app:layout_constraintStart_toEndOf="@+id/ivCompanyLogo"
		app:layout_constraintTop_toBottomOf="@id/tvTitle"
		android:layout_marginTop="4dp"
		android:layout_marginStart="24dp"
		android:textStyle="bold"
		android:textSize="16sp"
		android:textColor="@color/secondaryText"
		app:layout_constraintHorizontal_bias="0"
		android:maxLines="1"
		android:maxEms="13"
		android:ellipsize="end"
		app:layout_constraintEnd_toEndOf="parent"
		tools:text="Company Name blablablabla huehuehueue"
		/>
	
	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/tvCompanyLocation"
		app:layout_constraintStart_toEndOf="@+id/ivCompanyLogo"
		app:layout_constraintTop_toBottomOf="@id/tvCompanyName"
		android:layout_marginTop="4dp"
		android:layout_marginStart="24dp"
		android:textStyle="bold"
		android:textSize="16sp"
		android:textColor="@color/secondaryText"
		app:layout_constraintHorizontal_bias="0"
		android:maxLines="1"
		android:maxEms="13"
		android:ellipsize="end"
		app:layout_constraintEnd_toEndOf="parent"
		tools:text="Brasil - SÃ£o Paulo huehuehuehueue"
		/>

</androidx.constraintlayout.widget.ConstraintLayout>